<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RawgGames" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/ThemeOverlay.RawgGames.ActionBar</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.RawgGames.TitleMedium</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.RawgGames.BodyLarge</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.RawgGames.BodySmall</item>
    </style>
</resources>