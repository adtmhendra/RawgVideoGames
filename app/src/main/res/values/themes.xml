<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RawgGames" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/ThemeOverlay.RawgGames.ActionBar</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.RawgGames.TitleMedium</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.RawgGames.BodyLarge</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.RawgGames.BodySmall</item>
    </style>

    <style name="ThemeOverlay.RawgGames.ActionBar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextAppearance.RawgGames.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextAppearance.RawgGames.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextAppearance.RawgGames.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <!--  Default attribute content for both of horizontal_list xml layout  -->
    <style name="ImageContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_image_size_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextContent.Title">
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
    </style>

    <style name="TextContent.Subtitle">
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:textAppearance">?attr/textAppearanceBodySmall</item>
    </style>

    <style name="MaterialCardView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/default_material_cardview_height_size</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:clickable">true</item>
    </style>

    <!--  Default attribute content for home_fragment xml layout  -->
    <style name="TextContent.RecyclerViewTitle">
        <item name="android:layout_marginStart">@dimen/default_home_screen_margin</item>
        <item name="android:minHeight">@dimen/min_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?attr/textAppearanceTitleMedium</item>
    </style>

    <style name="RecyclerView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="LinearLayoutRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_linear_layout_recyclerview</item>
        <item name="android:layout_marginStart">@dimen/default_home_screen_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_home_screen_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ImgStateHandle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="FrameContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FrameContainer.SearchView">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:hint">@string/search_games</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">@dimen/default_search_view_padding</item>
        <item name="android:minHeight">@dimen/min_height</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>