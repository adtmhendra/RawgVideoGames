<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashscreenActivity">

    <ImageView
        android:id="@+id/imgSplashscreen"
        android:layout_width="@dimen/default_splashscreen_image_size"
        android:layout_height="@dimen/default_splashscreen_image_size"
        android:contentDescription="@string/splashscreen_image"
        android:scaleType="fitCenter"
        android:src="@drawable/rawg_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>